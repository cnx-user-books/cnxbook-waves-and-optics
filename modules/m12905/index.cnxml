<section id="id17724510">
<title>The Fresnel Equations</title>
<para id="id16679540">
   <m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>r</m:mi>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">≡</m:mo>
       <m:msub>
         <m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="prefix">(</m:mo>
           <m:mfrac>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>r</m:mi>
               </m:mrow>
             </m:msub>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>i</m:mi>
               </m:mrow>
             </m:msub>
           </m:mfrac>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">)</m:mo>
         </m:mrow>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">−</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
       </m:mfrac>
     </m:mrow>
   </m:math><m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>t</m:mi>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">≡</m:mo>
       <m:msub>
         <m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="prefix">(</m:mo>
           <m:mfrac>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>t</m:mi>
               </m:mrow>
             </m:msub>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>i</m:mi>
               </m:mrow>
             </m:msub>
           </m:mfrac>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">)</m:mo>
         </m:mrow>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mn>2</m:mn>
           <m:mo/>
           <m:msub>
             <m:mi>n</m:mi>
             <m:mi>i</m:mi>
           </m:msub>
           <m:mo/>
           <m:mrow>
             <m:mi mathcolor="gray">cos</m:mi>
             <m:mo/>
             <m:msub>
               <m:mi>θ</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
       </m:mfrac>
     </m:mrow>
   </m:math>
</para>
