           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
