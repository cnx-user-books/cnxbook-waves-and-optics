           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
