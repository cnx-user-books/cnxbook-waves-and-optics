  <content>
<para id="id14704229">
   <m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>r</m:mi>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">≡</m:mo>
       <m:msub>
         <m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="prefix">(</m:mo>
           <m:mfrac>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>r</m:mi>
               </m:mrow>
             </m:msub>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>i</m:mi>
               </m:mrow>
             </m:msub>
           </m:mfrac>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">)</m:mo>
         </m:mrow>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">−</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
       </m:mfrac>
     </m:mrow>
   </m:math><m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>t</m:mi>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">≡</m:mo>
       <m:msub>
         <m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="prefix">(</m:mo>
           <m:mfrac>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>t</m:mi>
               </m:mrow>
             </m:msub>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>i</m:mi>
               </m:mrow>
             </m:msub>
           </m:mfrac>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">)</m:mo>
         </m:mrow>
         <m:mo form="infix">⊥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mn>2</m:mn>
           <m:mo/>
           <m:msub>
             <m:mi>n</m:mi>
             <m:mi>i</m:mi>
           </m:msub>
           <m:mo/>
           <m:mrow>
             <m:mi mathcolor="gray">cos</m:mi>
             <m:mo/>
             <m:msub>
               <m:mi>θ</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
       </m:mfrac>
     </m:mrow>
   </m:math>
</para>
<para id="id10547689">
   <m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>r</m:mi>
         <m:mo form="infix">∥</m:mo>
       </m:msub>
       <m:mo form="infix">≡</m:mo>
       <m:msub>
         <m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="prefix">(</m:mo>
           <m:mfrac>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>r</m:mi>
               </m:mrow>
             </m:msub>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>i</m:mi>
               </m:mrow>
             </m:msub>
           </m:mfrac>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">)</m:mo>
         </m:mrow>
         <m:mo form="infix">∥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">−</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
       </m:mfrac>
     </m:mrow>
   </m:math><m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>t</m:mi>
         <m:mo form="infix">∥</m:mo>
       </m:msub>
       <m:mo form="infix">≡</m:mo>
       <m:msub>
         <m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="prefix">(</m:mo>
           <m:mfrac>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>t</m:mi>
               </m:mrow>
             </m:msub>
             <m:msub>
               <m:mi>E</m:mi>
               <m:mrow>
                 <m:mn>0</m:mn>
                 <m:mo/>
                 <m:mi>i</m:mi>
               </m:mrow>
             </m:msub>
           </m:mfrac>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">)</m:mo>
         </m:mrow>
         <m:mo form="infix">∥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mn>2</m:mn>
           <m:mo/>
           <m:msub>
             <m:mi>n</m:mi>
             <m:mi>i</m:mi>
           </m:msub>
           <m:mo/>
           <m:mrow>
             <m:mi mathcolor="gray">cos</m:mi>
             <m:mo/>
             <m:msub>
               <m:mi>θ</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
           </m:mrow>
         </m:mrow>
         <m:mrow>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
           <m:mo form="infix">+</m:mo>
           <m:mrow>
             <m:msub>
               <m:mi>n</m:mi>
               <m:mi>i</m:mi>
             </m:msub>
             <m:mo/>
             <m:mrow>
               <m:mi mathcolor="gray">cos</m:mi>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>t</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:mrow>
       </m:mfrac>
     </m:mrow>
   </m:math>
   We can rewrite these equations using Snell's Law to eliminate the
   <m:math display="inline">
     <m:mrow>
       <m:mi mathcolor="gray">cos</m:mi>
       <m:mo/>
       <m:msub>
         <m:mi>θ</m:mi>
         <m:mi>t</m:mi>
       </m:msub>
     </m:mrow>
   </m:math>
   term. From simple trigonometry we know that
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mrow>
         <m:mrow>
           <m:mi mathcolor="gray">cos</m:mi>
           <m:mo/>
           <m:msub>
             <m:mi>θ</m:mi>
             <m:mi>t</m:mi>
           </m:msub>
         </m:mrow>
         <m:mo form="infix">=</m:mo>
         <m:msqrt>
           <m:mn>1</m:mn>
           <m:mo form="infix">−</m:mo>
           <m:mrow>
             <m:msup>
               <m:mi mathcolor="gray">sin</m:mi>
               <m:mn>2</m:mn>
             </m:msup>
             <m:mo/>
             <m:msub>
               <m:mi>θ</m:mi>
               <m:mi>t</m:mi>
             </m:msub>
           </m:mrow>
         </m:msqrt>
       </m:mrow>
       <m:mtext>.</m:mtext>
     </m:mrow>
   </m:math>
   We also know from Snell's law that
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mrow>
         <m:mi mathcolor="gray">sin</m:mi>
         <m:mo/>
         <m:msub>
           <m:mi>θ</m:mi>
           <m:mi>t</m:mi>
         </m:msub>
       </m:mrow>
       <m:mo form="infix">=</m:mo>
       <m:mrow>
         <m:mfrac>
           <m:msub>
             <m:mi>n</m:mi>
             <m:mi>i</m:mi>
           </m:msub>
           <m:msub>
             <m:mi>n</m:mi>
             <m:mi>t</m:mi>
           </m:msub>
         </m:mfrac>
         <m:mo/>
         <m:mrow>
           <m:mi mathcolor="gray">sin</m:mi>
           <m:mo/>
           <m:msub>
             <m:mi>θ</m:mi>
             <m:mi>i</m:mi>
           </m:msub>
         </m:mrow>
       </m:mrow>
     </m:mrow>
   </m:math>
   so we have
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mrow>
         <m:mrow>
           <m:mi mathcolor="gray">cos</m:mi>
           <m:mo/>
           <m:msub>
             <m:mi>θ</m:mi>
             <m:mi>t</m:mi>
           </m:msub>
         </m:mrow>
         <m:mo form="infix">=</m:mo>
         <m:msqrt>
           <m:mn>1</m:mn>
           <m:mo form="infix">−</m:mo>
           <m:mrow>
             <m:mfrac>
               <m:msubsup>
                 <m:mi>n</m:mi>
                 <m:mi>i</m:mi>
                 <m:mn>2</m:mn>
               </m:msubsup>
               <m:msubsup>
                 <m:mi>n</m:mi>
                 <m:mi>t</m:mi>
                 <m:mn>2</m:mn>
               </m:msubsup>
             </m:mfrac>
             <m:mo/>
             <m:mrow>
               <m:msup>
                 <m:mi mathcolor="gray">sin</m:mi>
                 <m:mn>2</m:mn>
               </m:msup>
               <m:mo/>
               <m:msub>
                 <m:mi>θ</m:mi>
                 <m:mi>i</m:mi>
               </m:msub>
             </m:mrow>
           </m:mrow>
         </m:msqrt>
       </m:mrow>
       <m:mtext>.</m:mtext>
     </m:mrow>
   </m:math>
</para>
<para id="id14613627">
   We can substitute this into
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mstyle displaystyle="true">
         <m:mtable>
           <m:mtr>
             <m:mtd groupalign="right left">
               <m:maligngroup/>
               <m:mrow>
                 <m:msub>
                   <m:mi>r</m:mi>
                   <m:mo form="infix">⊥</m:mo>
                 </m:msub>
                 <m:maligngroup/>
                 <m:mo form="infix">=</m:mo>
                 <m:mfrac>
                   <m:mrow>
                     <m:mrow>
                       <m:msub>
                         <m:mi>n</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                       <m:mo/>
                       <m:mrow>
                         <m:mi mathcolor="gray">cos</m:mi>
                         <m:mo/>
                         <m:msub>
                           <m:mi>θ</m:mi>
                           <m:mi>i</m:mi>
                         </m:msub>
                       </m:mrow>
                     </m:mrow>
                     <m:mo form="infix">−</m:mo>
                     <m:mrow>
                       <m:msub>
                         <m:mi>n</m:mi>
                         <m:mi>t</m:mi>
                       </m:msub>
                       <m:mo/>
                       <m:msqrt>
                         <m:mn>1</m:mn>
                         <m:mo form="infix">−</m:mo>
                         <m:mrow>
                           <m:mfrac>
                             <m:msubsup>
                               <m:mi>n</m:mi>
                               <m:mi>i</m:mi>
                               <m:mn>2</m:mn>
                             </m:msubsup>
                             <m:msubsup>
                               <m:mi>n</m:mi>
                               <m:mi>t</m:mi>
                               <m:mn>2</m:mn>
                             </m:msubsup>
                           </m:mfrac>
                           <m:mo/>
                           <m:mrow>
                             <m:msup>
                               <m:mi mathcolor="gray">sin</m:mi>
                               <m:mn>2</m:mn>
                             </m:msup>
                             <m:mo/>
                             <m:msub>
                               <m:mi>θ</m:mi>
                               <m:mi>i</m:mi>
                             </m:msub>
                           </m:mrow>
                         </m:mrow>
                       </m:msqrt>
                     </m:mrow>
                   </m:mrow>
                   <m:mrow>
                     <m:mrow>
                       <m:msub>
                         <m:mi>n</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                       <m:mo/>
                       <m:mrow>
                         <m:mi mathcolor="gray">cos</m:mi>
                         <m:mo/>
                         <m:msub>
                           <m:mi>θ</m:mi>
                           <m:mi>i</m:mi>
                         </m:msub>
                       </m:mrow>
                     </m:mrow>
                     <m:mo form="infix">+</m:mo>
                     <m:mrow>
                       <m:msub>
                         <m:mi>n</m:mi>
                         <m:mi>t</m:mi>
                       </m:msub>
                       <m:mo/>
                       <m:msqrt>
                         <m:mn>1</m:mn>
                         <m:mo form="infix">−</m:mo>
                         <m:mrow>
                           <m:mfrac>
                             <m:msubsup>
                               <m:mi>n</m:mi>
                               <m:mi>i</m:mi>
                               <m:mn>2</m:mn>
                             </m:msubsup>
                             <m:msubsup>
                               <m:mi>n</m:mi>
                               <m:mi>t</m:mi>
                               <m:mn>2</m:mn>
                             </m:msubsup>
                           </m:mfrac>
                           <m:mo/>
                           <m:mrow>
                             <m:msup>
                               <m:mi mathcolor="gray">sin</m:mi>
                               <m:mn>2</m:mn>
                             </m:msup>
                             <m:mo/>
                             <m:msub>
                               <m:mi>θ</m:mi>
                               <m:mi>i</m:mi>
                             </m:msub>
                           </m:mrow>
                         </m:mrow>
                       </m:msqrt>
                     </m:mrow>
                   </m:mrow>
                 </m:mfrac>
               </m:mrow>
             </m:mtd>
           </m:mtr>
           <m:mtr>
             <m:mtd groupalign="right left">
               <m:maligngroup/>
               <m:maligngroup/>
               <m:mo form="infix">=</m:mo>
               <m:mfrac>
                 <m:mrow>
                   <m:mrow>
                     <m:msub>
                       <m:mi>n</m:mi>
                       <m:mi>i</m:mi>
                     </m:msub>
                     <m:mo/>
                     <m:mrow>
                       <m:mi mathcolor="gray">cos</m:mi>
                       <m:mo/>
                       <m:msub>
                         <m:mi>θ</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                     </m:mrow>
                   </m:mrow>
                   <m:mo form="infix">−</m:mo>
                   <m:msqrt>
                     <m:msubsup>
                       <m:mi>n</m:mi>
                       <m:mi>t</m:mi>
                       <m:mn>2</m:mn>
                     </m:msubsup>
                     <m:mo form="infix">−</m:mo>
                     <m:mrow>
                       <m:msubsup>
                         <m:mi>n</m:mi>
                         <m:mi>i</m:mi>
                         <m:mn>2</m:mn>
                       </m:msubsup>
                       <m:mo/>
                       <m:mrow>
                         <m:msup>
                           <m:mi mathcolor="gray">sin</m:mi>
                           <m:mn>2</m:mn>
                         </m:msup>
                         <m:mo/>
                         <m:msub>
                           <m:mi>θ</m:mi>
                           <m:mi>i</m:mi>
                         </m:msub>
                       </m:mrow>
                     </m:mrow>
                   </m:msqrt>
                 </m:mrow>
                 <m:mrow>
                   <m:mrow>
                     <m:msub>
                       <m:mi>n</m:mi>
                       <m:mi>i</m:mi>
                     </m:msub>
                     <m:mo/>
                     <m:mrow>
                       <m:mi mathcolor="gray">cos</m:mi>
                       <m:mo/>
                       <m:msub>
                         <m:mi>θ</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                     </m:mrow>
                   </m:mrow>
                   <m:mo form="infix">+</m:mo>
                   <m:msqrt>
                     <m:msubsup>
                       <m:mi>n</m:mi>
                       <m:mi>t</m:mi>
                       <m:mn>2</m:mn>
                     </m:msubsup>
                     <m:mo form="infix">−</m:mo>
                     <m:mrow>
                       <m:msubsup>
                         <m:mi>n</m:mi>
                         <m:mi>i</m:mi>
                         <m:mn>2</m:mn>
                       </m:msubsup>
                       <m:mo/>
                       <m:mrow>
                         <m:msup>
                           <m:mi mathcolor="gray">sin</m:mi>
                           <m:mn>2</m:mn>
                         </m:msup>
                         <m:mo/>
                         <m:msub>
                           <m:mi>θ</m:mi>
                           <m:mi>i</m:mi>
                         </m:msub>
                       </m:mrow>
                     </m:mrow>
                   </m:msqrt>
                 </m:mrow>
               </m:mfrac>
             </m:mtd>
           </m:mtr>
           <m:mtr>
             <m:mtd groupalign="right left">
               <m:maligngroup/>
               <m:maligngroup/>
               <m:mo form="infix">=</m:mo>
               <m:mfrac>
                 <m:mrow>
                   <m:mrow>
                     <m:mi mathcolor="gray">cos</m:mi>
                     <m:mo/>
                     <m:msub>
                       <m:mi>θ</m:mi>
                       <m:mi>i</m:mi>
                     </m:msub>
                   </m:mrow>
                   <m:mo form="infix">−</m:mo>
                   <m:msqrt>
                     <m:mfrac>
                       <m:msubsup>
                         <m:mi>n</m:mi>
                         <m:mi>t</m:mi>
                         <m:mn>2</m:mn>
                       </m:msubsup>
                       <m:msubsup>
                         <m:mi>n</m:mi>
                         <m:mi>i</m:mi>
                         <m:mn>2</m:mn>
                       </m:msubsup>
                     </m:mfrac>
                     <m:mo form="infix">−</m:mo>
                     <m:mrow>
                       <m:msup>
                         <m:mi mathcolor="gray">sin</m:mi>
                         <m:mn>2</m:mn>
                       </m:msup>
                       <m:mo/>
                       <m:msub>
                         <m:mi>θ</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                     </m:mrow>
                   </m:msqrt>
                 </m:mrow>
                 <m:mrow>
                   <m:mrow>
                     <m:mi mathcolor="gray">cos</m:mi>
                     <m:mo/>
                     <m:msub>
                       <m:mi>θ</m:mi>
                       <m:mi>i</m:mi>
                     </m:msub>
                   </m:mrow>
                   <m:mo form="infix">+</m:mo>
                   <m:msqrt>
                     <m:mfrac>
                       <m:msubsup>
                         <m:mi>n</m:mi>
                         <m:mi>t</m:mi>
                         <m:mn>2</m:mn>
                       </m:msubsup>
                       <m:msubsup>
                         <m:mi>n</m:mi>
                         <m:mi>i</m:mi>
                         <m:mn>2</m:mn>
                       </m:msubsup>
                     </m:mfrac>
                     <m:mo form="infix">−</m:mo>
                     <m:mrow>
                       <m:msup>
                         <m:mi mathcolor="gray">sin</m:mi>
