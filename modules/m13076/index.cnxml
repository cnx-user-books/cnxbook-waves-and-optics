                       </m:msup>
                       <m:mo/>
                       <m:msub>
                         <m:mi>θ</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                     </m:mrow>
                   </m:msqrt>
                 </m:mrow>
               </m:mfrac>
             </m:mtd>
           </m:mtr>
         </m:mtable>
       </m:mstyle>
     </m:mrow>
   </m:math>
</para>
<para id="id5242570">
   
</para>
<para id="id5242579">
   Similarly we can derive that
</para>
<para id="id5242583">
   <m:math mode="display" display="block">
     <m:mrow>
       <m:msub>
         <m:mi>r</m:mi>
         <m:mo form="infix">∥</m:mo>
       </m:msub>
       <m:mo form="infix">=</m:mo>
       <m:mfrac>
         <m:mrow>
           <m:mrow>
             <m:mfrac>
               <m:msubsup>
                 <m:mi>n</m:mi>
                 <m:mi>t</m:mi>
                 <m:mn>2</m:mn>
               </m:msubsup>
               <m:msubsup>
                 <m:mi>n</m:mi>
                 <m:mi>i</m:mi>
                 <m:mn>2</m:mn>
